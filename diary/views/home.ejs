<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Private daily Diary</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="../styles/home.css"> <!-- External CSS file -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>

    <%- include('header') %>

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <!-- Carousel Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>

            <!-- Carousel Items -->
            <div class="carousel-inner">
                <!-- Slide 1 -->
                <div class="carousel-item active">
                    <img src="https://s-i.huffpost.com/gen/2395634/images/o-DIARY-facebook.jpg"
                        class="d-block w-100 carousel-image" alt="...">
                    <div class="carousel-caption">
                        <h5>Sign In to Private Daily Diary</h5>
                        <p>Explore the world of personal expression and creativity.</p>
                        <a href="/signup" class="btn btn-light">Sign In</a>
                        <a href="/login" class="btn btn-secondary">Login</a>
                    </div>
                </div>

                <!-- Slide 2 -->
                <div class="carousel-item">
                    <img src="https://th.bing.com/th/id/OIG.VSlVP4IsAFHjSY0knil0?pid=ImgGn"
                        class="d-block w-100 carousel-image" alt="...">
                    <div class="carousel-caption">
                        <h5>Sign In to Private Daily Diary</h5>
                        <p>Express yourself with privacy and security.</p>
                        <a href="/signup" class="btn btn-light">Sign In</a>
                        <a href="/login" class="btn btn-secondary">Login</a>
                    </div>
                </div>

                <!-- Slide 3 -->
                <div class="carousel-item">
                    <img src="https://i.pinimg.com/originals/3a/a8/74/3aa874473087532a01f865ad094d15f9.jpg"
                        class="d-block w-100 carousel-image" alt="...">
                    <div class="carousel-caption">
                        <h5>Sign In to Private Daily Diary</h5>
                        <p>Your personal space for thoughts and reflections.</p>
                        <a href="/signup" class="btn btn-light">Sign In</a>
                        <a href="/login" class="btn btn-secondary">Login</a>
                    </div>
                </div>
            </div>

            <!-- Carousel Controls -->
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <!-- Card Section -->
        <div class="container mt-5">
            <div class="row">
                <!-- Card 1 -->
                <div class="col-md-6 mb-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <h5 class="card-title">Private Daily Diary</h5>
                            <p class="card-text">Write down your thoughts, emotions, and experiences without judgment.
                                Our
                                privacy-first platform ensures your safety. Join us to explore the realm of
                                self-reflection
                                and personal growth.</p>
                            <a href="/login" class="btn btn-light">Login</a>
                            <a href="/signup" class="btn btn-secondary">Signup</a>
                        </div>
                    </div>
                </div>

                <!-- Card 2 -->
                <div class="col-md-6 mb-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <h5 class="card-title">Unlock Your Creativity</h5>
                            <p class="card-text">Discover a space where your ideas flourish. Our platform is designed to
                                encourage creativity and self-expression. Start your journey of personal discovery and
                                innovation with us.</p>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check-circle"></i> Express freely and without boundaries.</li>
                                <li><i class="fas fa-check-circle"></i> Capture moments and emotions in your digital
                                    diary.</li>
                                <li><i class="fas fa-check-circle"></i> Connect with like-minded individuals.</li>
                                <li><i class="fas fa-check-circle"></i> Privacy is our top priority.</li>
                            </ul>
                            <a href="/login" class="btn btn-light">Get Started</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <form class="contact-form" action="">
                        <div class="form-group">
                            <label for="fullname">Full Name:</label>
                            <input type="text" id="fullname" name="fullname" placeholder="Your Name" required>
                        </div>

                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" id="email" name="email" placeholder="Your Email" required>
                        </div>

                        <div class="form-group">
                            <label for="comment">Comment:</label>
                            <textarea id="comment" name="comment" placeholder="Your Comments" rows="4"
                                required></textarea>
                        </div>

                        <div class="form-group">
                            <button type="submit">Send</button>
                        </div>
                    </form>
                </div>

                <!-- Star Rating Section -->
                <div class="col-md-6">
                    <div class="stars">
                        <h2>Rate Us</h2>
                        <div class="rating">
                            <span class="fa fa-star checked" onclick="rate(1)"></span>
                            <span class="fa fa-star checked" onclick="rate(2)"></span>
                            <span class="fa fa-star checked" onclick="rate(3)"></span>
                            <span class="fa fa-star" onclick="rate(4)"></span>
                            <span class="fa fa-star" onclick="rate(5)"></span>
                        </div>

                        <div id="feedbackForm">
                            <form>
                                <label for="feedback">Your Feedback:</label><br>
                                <textarea id="feedback" name="feedback" rows="4" cols="50"></textarea><br>
                                <button type="button" id="submitBtn" onclick="submitFeedback()">Submit Feedback</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer Section -->
        <footer class="bg-dark text-white py-5 text-center mt-5">
            <p>&copy; 2021 Your Website. All rights reserved.</p>
        </footer>

        <!-- Scripts -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

        <script>
            let userRating = 3; // Default rating

            function rate(stars) {
                userRating = stars;
                highlightStars(stars);
            }

            function highlightStars(stars) {
                const allStars = document.querySelectorAll('.fa-star');
                allStars.forEach((star, index) => {
                    if (index < stars) {
                        star.classList.add('checked');
                    } else {
                        star.classList.remove('checked');
                    }
                });
            }

            function submitFeedback() {
                const feedbackText = document.getElementById('feedback').value;
                console.log('Rating: ', userRating);
                console.log('Feedback: ', feedbackText);
                // Add your logic here to handle the submitted feedback
            }
        </script>

</body>

</html>